<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="16dp">

    <!-- 标题 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pingfang_medium"
        android:paddingBottom="16dp"
        android:text="分享至"
        android:textAlignment="center"
        android:textColor="@color/text_black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- 分享选项容器 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="24dp">

        <!-- 微信 -->
        <LinearLayout
            android:id="@+id/option_wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/share_wechat"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="centerCrop"
                android:src="@drawable/wechat_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/pingfang_medium"
                android:text="微信"
                android:textColor="@color/text_black"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- 朋友圈 -->
        <LinearLayout
            android:id="@+id/option_moments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/share_friend_circle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="centerCrop"
                android:src="@drawable/friends_circle_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/pingfang_medium"
                android:text="朋友圈"
                android:textColor="@color/text_black"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- QQ -->
        <LinearLayout
            android:id="@+id/option_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/share_qq"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="centerCrop"
                android:scaleX="1.1"
                android:scaleY="1.1"
                android:src="@drawable/qq_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/pingfang_medium"
                android:text="QQ"
                android:textColor="@color/text_black"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- 微博 -->
        <LinearLayout
            android:id="@+id/option_weibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/share_weibo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="centerCrop"
                android:src="@drawable/weibo_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/pingfang_medium"
                android:text="微博"
                android:textColor="@color/text_black"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- 复制链接 -->
        <LinearLayout
            android:id="@+id/option_copy_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/share_copy_link"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="centerCrop"
                android:src="@drawable/copy_link_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/pingfang_medium"
                android:text="复制链接"
                android:textColor="@color/text_black"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
